extends root/layout
include mixins/input

block container
    include include/header
    .section.profile
        .container.profile__container
            .profile__content
                .aside__header
                    span.section-title.section-title--color Мой профиль
                    a.logout(href="#") Выйти из профиля
                .aside__container
                    .profile__user
                        .profile__photo.verified(style="background-image: url('img/photo.png'")
                        .profile__name Голополосов Максим Александрович
                    .input__group
                        label.input__label Телефон:
                        input.input.disabled(type="text" value="+ 7 (185) 451 84 65")
                    .input__group
                        label.input__label Email:
                        input.input.disabled(type="text" value="Maxxx.Polos@gmail.com")
                    .input__group
                        label.input__label Адрес доставки:
                        textarea.input.disabled 142793, г. Москва, ул. Новая вавиловская. д. 158, кв. 154)
                    a.btn.btn_dark.profile__btn(href="#edit") Редактировать данные
                    .aside__content
                        a.btn.profile__btn(href="#change-pass") Сменить пароль
                    .checkbox.profile__checkbox
                        input(id="subscribe" type="checkbox")
                        .checkbox__mark
                        label.checkbox__label(for="subscribe") Получать новости о товарах и событиях
            .profile__content
                span.section-title.section-title--color История моих заказов
                .profile-table
                    .profile-table__row
                        .profile-table__cell
                            p Номер
                        .profile-table__cell
                            p Дата #[i.icon_sort]
                        .profile-table__cell
                            p Состав заказа
                        .profile-table__cell
                            p Общая сумма заказа #[i.icon_sort]
                    - for (var i = 0; i < 5; i++) {
                        .profile-table__row
                            .profile-table__cell
                                p.bold 24515
                                p.profile-table__status Выполнен
                            .profile-table__cell
                                p 12.20.2018
                            .profile-table__cell
                                div.profile-table__product
                                    span.profile-table__quantity 1шт.
                                    a.active-link(href="#") Домострой сильвестровскаго извода
                                    a.profile-table__info(href="#info")
                                        img(src="img/dots.svg")
                                div.profile-table__product
                                    span.profile-table__quantity 1шт.
                                    a.active-link(href="#") Домострой сильвестровскаго извода
                                    a.profile-table__info(href="#info")
                                        img(src="img/dots.svg")
                            .profile-table__cell
                                p.bold 4 700 рублей
                    - }
                .profile-table__footer
                    a.btn.profile__btn(href="#") Показать ещё
    include include/footer
    .remodal-wrapper(style='display: none;')
        .remodal.modal(data-remodal-id='edit', tabindex='-1')
            button.remodal-close(data-remodal-action='close')
            .modal__header
                span.modal-title Редактировать профиль
            .modal__content
                .change-photo
                    .profile__photo(style="background-image: url('img/photo.png')")
                    input.filepicker(type="file" accept="image/*" id="filepicker")
                    label.filepicker__label.btn(for="filepicker") Новое фото
                    a.filepicker__delete(href="#") Удалить фото
                +input("Фамилия", "text", "Ваша фамилия", "required")
                +input("Имя", "text", "Ваше имя", "required")
                +input("Отчество", "text", "Ваше отчество", "required")
                +input("Номер телефона", "text", "Ваш номер телефона", "required")
                +input("E-mail", "text", "Ваш E-mail", "required")
                +input("Адрес доставки", "text", "Почтовый индекс, город, улица, дом, квартира", "")
            .modal__footer.profile__modal-footer
                a.btn.btn_dark.modal__btn(href="#") Сохранить изменения

        .remodal.modal(data-remodal-id='change-pass', tabindex='-1')
            button.remodal-close(data-remodal-action='close')
            .modal__header
                span.modal-title Сменить пароль
            .modal__content
                .input__group
                    .input__label-group
                        label.input__label Введите старый пароль
                        span.input__hint Обязательно для заполнения
                    input.input(type="password")
                .input__group
                    .input__label-group
                        label.input__label Введите новый пароль
                        span.input__hint Обязательно для заполнения
                    input.input(type="password")
                .input__group
                    .input__label-group
                        label.input__label Введите новый пароль ещё раз
                        span.input__hint Обязательно для заполнения
                    input.input(type="password")
            .modal__footer.profile__modal-footer
                a.btn.btn_dark.modal__btn(href="#") Изменить пароль

        .remodal.modal.product__info(data-remodal-id='info', tabindex='-1')
            button.remodal-close(data-remodal-action='close')
            .profile-table
                .profile-table__row
                    .profile-table__cell
                        p.bold Изделие:
                    .profile-table__cell
                        p Главная книга для ведения записей личного характе…
                    .profile-table__cell
                        p 2 500 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Цвет обложки:
                    .profile-table__cell
                        p Горький шоколад
                    .profile-table__cell
                        p 500 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Цвет обреза:
                    .profile-table__cell
                        p Мраморный
                    .profile-table__cell
                        p 500 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Тиснение:
                    .profile-table__cell
                        p Персональное
                    .profile-table__cell
                        p 500 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Титул:
                    .profile-table__cell
                        p Без рекламного блока
                    .profile-table__cell
                        p 500 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Рекламный модуль:
                    .profile-table__cell
                        p Стандартный
                    .profile-table__cell
                        p 0 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Упаковка:
                    .profile-table__cell
                        p Бесплатная коробка из синего крафта
                    .profile-table__cell
                        p 0 рублей
                .profile-table__row
                    .profile-table__cell
                        p.bold Итого стоимость:
                    .profile-table__cell
                        p -
                    .profile-table__cell
                        p 4 500 рублей
